{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "Abicus",
		"version": "../package.json"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			}
		},
		"windows": [
			{
				"title": "Abicus",
				"width": 416,
				"height": 516,
				"resizable": false,
				"fileDropEnabled": false
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "fi.ylioppilastutkinto.abicus",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"windows": {
				"nsis": {
					"displayLanguageSelector": true,
					"languages": [
						"fi-FI",
						"sv-SE",
						"en-GB"
					]
				},
				"wix": {
					"language": [
						"fi-FI",
						"sv-SE",
						"en-GB"
					]
				}
			}
		}
	}
}